<%- include("../partials/header.ejs") %>

<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_1.jpg');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
      <div class="col-md-9 ftco-animate text-center">
        <h1 class="mb-2 bread">All Documents & Credentials</h1>
        <p class="breadcrumbs">
          <span class="mr-2"><a href="/">Home <i class="ion-ios-arrow-forward"></i></a></span>
          <span>Resources <i class="ion-ios-arrow-forward"></i></span>
        </p>
      </div>
    </div>
  </div>
</section>

<section class="ftco-section bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="mb-3">Organizational Credentials & Legal Documents</h2>
      <p class="text-muted lead">Explore our official documents for public viewing, regulatory compliance, and institutional credibility. All resources are downloadable and updated regularly.</p>
    </div>

    <% const documents = [
      {
        category: "Legal Documents",
        color: "success",
        icon: "balance-scale",
        files: [
          { title: "Certificate of Registration", date: "Jan 2022", path: "/docs/certificate_of_registration.pdf" },
          { title: "Constitution & Bye-Laws", date: "Mar 2024", path: "/docs/constitution.pdf" }
        ]
      },
      {
        category: "Organizational Structure",
        color: "warning",
        icon: "sitemap",
        files: [
          { title: "Organizational Chart", date: "2023", path: "/docs/organizational-chart.pdf" },
          { title: "Executive Committee List", date: "2023â€“2026", path: "/docs/executive-committee.pdf" }
        ]
      },
      {
        category: "International Recommendations",
        color: "primary",
        icon: "globe-africa",
        files: [
          { title: "Islamic World League Letter", date: "Mecca, Saudi Arabia", path: "/docs/mecca-recommendation.pdf" },
          { title: "Dar al-Ifta Egypt Approval", date: "Cairo, Egypt", path: "/docs/egypt-endorsement.pdf" }
        ]
      },
      {
        category: "Media & Presentations",
        color: "secondary",
        icon: "photo-video",
        files: [
          { title: "Annual Report 2024", date: "Includes activities, finances, and outcomes", path: "/docs/annual-report-2024.pdf" }
        ]
      }
    ]; %>

    <% documents.forEach(section => { %>
      <div class="mb-5">
        <h4 class="text-<%= section.color %> mb-3">
          <i class="fas fa-<%= section.icon %> mr-2"></i> <%= section.category %>
        </h4>
        <div class="row">
          <% section.files.forEach(file => { %>
            <div class="col-md-6 mb-3">
              <div class="bg-white p-4 shadow-sm rounded d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                  <!-- Thumbnail Icon -->
                  <div class="mr-3">
                    <img src="/images/pdf-thumbnail.png" alt="PDF" width="40" class="img-fluid" style="opacity: 0.8;" />
                  </div>
                  <div>
                    <h6 class="mb-1"><%= file.title %></h6>
                    <p class="small text-muted mb-0"><%= file.date %> | PDF</p>
                  </div>
                </div>
                <div class="btn-group">
                  <button 
                    class="btn btn-outline-secondary btn-sm btn-preview" 
                    data-pdf="<%= file.path %>" 
                    data-title="<%= file.title %>"
                    title="Preview"
                  >
                    <i class="fas fa-eye"></i>
                  </button>
                  <a href="<%= file.path %>" class="btn btn-outline-<%= section.color %> btn-sm" download title="Download">
                    <i class="fas fa-download"></i>
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% }); %>

  </div>
</section>

<%- include("../partials/footer.ejs") %>
