<%- include('../partials/header.ejs') %>

<!-- Hero Section -->
<section
  class="hero-wrap hero-wrap-2"
  style="background-image: url('<%= baseURL %>/images/bg_2.jpg')"
  data-stellar-background-ratio="0.5"
>
  <div class="overlay"></div>
  <div class="container">
    <div
      class="row no-gutters slider-text align-items-end justify-content-center"
    >
      <div class="col-md-9 text-center mb-5">
        <h1 class="mb-2 bread text-light">Our Graduates</h1>
        <p class="breadcrumbs">
          <span class="mr-2"
            ><a href="/">Home <i class="ion-ios-arrow-forward"></i></a
          ></span>
          <span>Graduates <i class="ion-ios-arrow-forward"></i></span>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Graduate Section -->
<section class="ftco-section bg-light">
  <div class="container">
    <!-- Year Filter -->
    <div class="row mb-5">
      <div class="col-md-6 offset-md-3 text-center">
        <h3 class="mb-3">Select Graduation Year</h3>
        <form class="form-inline justify-content-center">
          <select class="form-control form-select">
            <option selected>2025</option>
            <option>2024</option>
            <option>2023</option>
            <option>2022</option>
            <option>2021</option>
            <option>2020</option>
            <!-- Add more years as needed -->
          </select>
        </form>
      </div>
    </div>

    <!-- Graduate Cards -->
    <div class="row">
      <!-- Graduate Card 1 -->
      <div class="col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
        <div class="staff bg-white p-4 shadow-sm text-center rounded">
          <div
            class="img mb-3"
            style="
              background-image: url('<%= baseURL %>/images/Testimonial_3.jpg');
              height: 200px;
              background-size: cover;
              background-position: center;
            "
          ></div>
          <h4 class="mb-1">Jane Doe</h4>
          <span class="position text-muted">Class of 2025</span>
          <p class="mt-3">“Dream big and work hard. Thank you SBHS!”</p>
        </div>
      </div>

      <!-- Graduate Card 2 -->
      <div class="col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
        <div class="staff bg-white p-4 shadow-sm text-center rounded">
          <div
            class="img mb-3"
            style="
              background-image: url('<%= baseURL %>/images/Testimonial_2.jpg');
              height: 200px;
              background-size: cover;
              background-position: center;
            "
          ></div>
          <h4 class="mb-1">John Smith</h4>
          <span class="position text-muted">Class of 2025</span>
          <p class="mt-3">
            “Great memories, great friends, and great teachers.”
          </p>
        </div>
      </div>

      <!-- Graduate Card 3 -->
      <div class="col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
        <div class="staff bg-white p-4 shadow-sm text-center rounded">
          <div
            class="img mb-3"
            style="
              background-image: url('<%= baseURL %>/images/Testimonial_1.jpg');
              height: 200px;
              background-size: cover;
              background-position: center;
            "
          ></div>
          <h4 class="mb-1">Mary Johnson</h4>
          <span class="position text-muted">Class of 2025</span>
          <p class="mt-3">“This school helped shape who I am today.”</p>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer.ejs') %>
