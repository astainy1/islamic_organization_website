<%- include("../partials/header.ejs") %>
<!-- Hero Section -->
<section
  class="hero-wrap hero-wrap-2"
  style="background-image: url('images/bg_2.jpg')"
>
  <div class="overlay"></div>
  <div class="container">
    <div
      class="row no-gutters slider-text align-items-center justify-content-center"
    >
      <div class="col-md-9 ftco-animate text-center">
        <h1 class="mb-2 bread">Biology</h1>
        <p class="breadcrumbs">
          <span class="mr-2"
            ><a href="/">Home <i class="ion-ios-arrow-forward"></i></a
          ></span>
          <span
            ><a href="<%= baseURL %>/programs"
              >Programs <i class="ion-ios-arrow-forward"></i></a
          ></span>
          <span>Biology <i class="ion-ios-arrow-forward"></i></span>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Subject Details Section -->
<section class="ftco-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 ftco-animate">
        <div class="blog-entry align-self-stretch">
          <div class="row">
            <div class="col-md-6">
              <img
                src="images/biology.jpg"
                class="img-fluid rounded"
                alt="Biology"
              />
            </div>
            <div class="col-md-6">
              <h2 class="mb-3">Introduction to Biology</h2>
              <p><strong>Instructor:</strong> Ms. Dunbar</p>
              <p><strong>Grade Level:</strong> 11 - 12</p>
              <p><strong>Max Students:</strong> 30</p>
              <p><strong>Duration:</strong> 1 Academic Year</p>
              <p>
                Biology is the scientific study of life. Students explore
                genetics, human anatomy, microbiology, plant life, and
                ecosystems. The subject lays the foundation for careers in
                medicine, agriculture, and the environment.
              </p>
              <p>
                This course encourages scientific curiosity and critical
                thinking through practical experiments and group work. Students
                are assessed via tests, projects, and lab reports.
              </p>
              <h5 class="mt-4">Topics Covered:</h5>
              <ul>
                <li>Cell structure and function</li>
                <li>Human anatomy and physiology</li>
                <li>Plant biology</li>
                <li>Genetics and heredity</li>
                <li>Ecology and environment</li>
              </ul>
              <p>
                <a href="<%= baseURL %>/admission" class="btn btn-primary px-4 py-2 mt-3"
                  >Enroll in Biology</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

