<%- include("../partials/header.ejs") %>

<!-- Hero Section -->
<section
  class="hero-wrap hero-wrap-2"
  style="background-image: url('<%= baseURL %>/images/bg_1.jpg')"
  data-stellar-background-ratio="0.5"
>
  <div class="overlay"></div>
  <div class="container">
    <div
      class="row no-gutters slider-text align-items-end justify-content-center"
    >
      <div class="col-md-9 text-center mb-5">
        <h1 class="mb-2 bread text-light">School Administrators</h1>
        <p class="breadcrumbs">
          <span class="mr-2"
            ><a href="/">Home <i class="ion-ios-arrow-forward"></i></a
          ></span>
          <span>Administrators <i class="ion-ios-arrow-forward"></i></span>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Administrators Grid -->
<section class="ftco-section bg-light">
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-md-7 text-center heading-section">
        <h2 class="mb-4">Meet Our Administrative Team</h2>
        <p>
          Our administrators are passionate professionals dedicated to creating
          a thriving learning environment.
        </p>
      </div>
    </div>
    <div class="row">
      <!-- Administrator Card -->
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="staff">
          <div class="img-wrap d-flex align-items-stretch">
            <div
              class="img"
              style="background-image: url('<%= baseURL %>/images/principal.jpg')"
            ></div>
          </div>
          <div class="text pt-3 text-center">
            <h3>Mr. Emmanuel Doe</h3>
            <span class="position mb-2">Principal</span>
            <div class="faded">
              <p>
                A seasoned educator with over 20 years of leadership experience
                in Liberian schools.
              </p>
              <a href="#" class="btn btn-sm btn-outline-primary">Read Bio</a>
            </div>
          </div>
        </div>
      </div>

      <!-- More administrator cards (copy & update content) -->
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="staff">
          <div class="img-wrap d-flex align-items-stretch">
            <div
              class="img"
              style="background-image: url('<%= baseURL %>/images/teacher-6.jpg')"
            ></div>
          </div>
          <div class="text pt-3 text-center">
            <h3>Mrs. Sarah Johnson</h3>
            <span class="position mb-2">Vice Principal</span>
            <div class="faded">
              <p>
                Specializes in student affairs, discipline, and ensuring smooth
                daily operations.
              </p>
              <a href="#" class="btn btn-sm btn-outline-primary">Read Bio</a>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 col-lg-4 mb-4">
        <div class="staff">
          <div class="img-wrap d-flex align-items-stretch">
            <div
              class="img"
              style="background-image: url('<%= baseURL %>/images/Testimonial_3.jpg')"
            ></div>
          </div>
          <div class="text pt-3 text-center">
            <h3>Mr. Abuboakai Konneh</h3>
            <span class="position mb-2">Dean of Students</span>
            <div class="faded">
              <p>
                Specializes in student affairs, discipline, and ensuring smooth
                daily operations.
              </p>
              <a href="#" class="btn btn-sm btn-outline-primary">Read Bio</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

