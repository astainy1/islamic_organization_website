<%- include("../partials/header.ejs") %>

<!-- Hero Section -->
<section
  class="hero-wrap hero-wrap-2"
  style="background-image: url('/images/bg_1.jpg')"
  data-stellar-background-ratio="0.5"
>
  <div class="overlay"></div>
  <div class="container">
    <div
      class="row no-gutters slider-text align-items-end justify-content-center"
    >
      <div class="col-md-9 text-center mb-5">
        <h1 class="mb-2 bread text-light">Media & Gallery</h1>
        <p class="breadcrumbs">
          <span class="mr-2">
            <a href="/">Home <i class="ion-ios-arrow-forward"></i></a>
          </span>
          <span>Media <i class="ion-ios-arrow-forward"></i></span>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Lightbox CSS -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/css/lightbox.min.css"
  rel="stylesheet"
/>

<!-- Media Section -->
<section class="ftco-section bg-light">
  <div class="container">
    <!-- Section Intro -->
    <div class="row justify-content-center mb-5">
      <div class="col-md-8 text-center heading-section">
        <h2 class="mb-4">Captured Blessings</h2>
        <p>
          Explore sacred moments, events, and educational programs that inspire
          and unite our community.
        </p>
      </div>
    </div>

    <!-- Photo Gallery -->
    <div class="row mb-5">
      <div class="col-md-12">
        <h4 class="mb-3 text-center">Photo Gallery</h4>
        <div class="row">
          <!-- Image 1 -->
          <div class="col-md-4 mb-4 text-center line-height">
            <a
              href="/images/higher-lajinah.jpg"
              data-lightbox="gallery"
              data-title="Higher Lajnah Committee Meeting – Leaders gather to plan and improve the community's religious and social affairs."
            >
              <img
                src="/images/higher-lajinah.jpg"
                class="img-fluid rounded shadow-sm"
                alt="Higher Lajnah Committee Meeting"
              />
            </a>
            <p class="mt-2 font-weight-bold">Higher Lajnah Committee Meeting</p>
            <p class="text-muted small">
              Leaders gather to plan and improve the community's religious and
              social affairs.
            </p>
          </div>

          <!-- Image 2 -->
          <div class="col-md-4 mb-4 text-center line-height">
            <a
              href="/images/blog_2.jpeg"
              data-lightbox="gallery"
              data-title="Friday Congregational Prayer – A moment of unity during Jummah prayer at the mosque."
            >
              <img
                src="/images/blog_2.jpeg"
                class="img-fluid rounded shadow-sm"
                alt="Friday Prayer Service"
              />
            </a>
            <p class="mt-2 font-weight-bold">Friday Congregational Prayer</p>
            <p class="text-muted small">
              A moment of unity during Jummah prayer at the mosque.
            </p>
          </div>

          <!-- Image 3 -->
          <div class="col-md-4 mb-4 text-center line-height">
            <a
              href="/images/blog_3.jpg"
              data-lightbox="gallery"
              data-title="Youth Qur'an Class – Young students learning the Holy Qur’an with passion and dedication."
            >
              <img
                src="/images/blog_3.jpg"
                class="img-fluid rounded shadow-sm"
                alt="Youth Qur'an Class"
              />
            </a>
            <p class="mt-2 font-weight-bold">Youth Qur'an Class</p>
            <p class="text-muted small">
              Young students learning the Holy Qur’an with passion and
              dedication.
            </p>
          </div>

          <!-- Image 4 -->
          <div class="col-md-4 mb-4 text-center line-height">
            <a
              href="/images/community_event.jpg"
              data-lightbox="gallery"
              data-title="Charity Distribution Event – Volunteers distributing food and essentials to those in need."
            >
              <img
                src="/images/community_event.jpg"
                class="img-fluid rounded shadow-sm"
                alt="Charity Distribution Event"
              />
            </a>
            <p class="mt-2 font-weight-bold">Charity Distribution Event</p>
            <p class="text-muted small">
              Volunteers distributing food and essentials to those in need.
            </p>
          </div>

          <!-- Image 5 -->
          <div class="col-md-4 mb-4 text-center line-height">
            <a
              href="/images/bg_1.jpg"
              data-lightbox="gallery"
              data-title="Eid Celebration – Families and friends gather joyfully after the Eid prayer."
            >
              <img
                src="/images/bg_1.jpg"
                class="img-fluid rounded shadow-sm"
                alt="Eid Celebration"
              />
            </a>
            <p class="mt-2 font-weight-bold">Eid Celebration</p>
            <p class="text-muted small">
              Families and friends gather joyfully after the Eid prayer.
            </p>
          </div>

          <!-- Image 6 -->
          <div class="col-md-4 mb-4 text-center line-height" style="line-height: 15px">
            <a
              href="/images/bg_2.jpg"
              data-lightbox="gallery"
              data-title="Qur'an Recitation Competition – Children participating in a spiritually uplifting recitation event."
            >
              <img
                src="/images/bg_2.jpg"
                class="img-fluid rounded shadow-sm"
                alt="Recitation Competition"
              />
            </a>
            <p class="mt-2 font-weight-bold">Qur'an Recitation Competition</p>
            <p class="text-muted small">
              Children participating in a spiritually uplifting recitation
              event.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Video Highlights -->
    <div class="row">
      <div class="col-md-12">
        <h4 class="mb-3 text-center">Video Highlights</h4>
        <div class="row">
          <!-- Video 1 -->
          <div class="col-md-6 mb-4">
            <div class="mb-2 text-center">
              <h6 class="text-primary">
                How to Perform Salah – Step-by-Step Guide
              </h6>
              <p class="small text-muted">
                A detailed tutorial on offering Salah (prayer) correctly for new
                and lifelong learners alike.
              </p>
            </div>
            <div
              class="embed-responsive embed-responsive-16by9 rounded shadow-sm"
            >
              <iframe
                class="embed-responsive-item"
                src="https://www.youtube.com/embed/hGT0-Bh7aLs"
                allowfullscreen
              ></iframe>
            </div>
          </div>

          <!-- Video 2 -->
          <div class="col-md-6 mb-4">
            <div class="mb-2 text-center">
              <h6 class="text-primary">The Story of Prophet Ibrahim (AS)</h6>
              <p class="small text-muted">
                An animated account of Prophet Ibrahim’s unwavering faith and
                sacrifice, beautifully narrated for all ages.
              </p>
            </div>
            <div
              class="embed-responsive embed-responsive-16by9 rounded shadow-sm"
            >
              <iframe
                class="embed-responsive-item"
                src="https://www.youtube.com/embed/_td6QzNStpY"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

