<%- include('../partials/header.ejs') %>

<!-- Hero Section -->
<section
  class="hero-wrap hero-wrap-2"
  style="background-image: url('<%= baseURL %>/images/bg_2.jpg')"
  data-stellar-background-ratio="0.5"
>
  <div class="overlay"></div>
  <div class="container">
    <div
      class="row no-gutters slider-text align-items-end justify-content-center"
    >
      <div class="col-md-9 text-center mb-5">
        <h1 class="mb-2 bread text-light">Notable Alumni</h1>
        <p class="breadcrumbs">
          <span class="mr-2"
            ><a href="/">Home <i class="ion-ios-arrow-forward"></i></a
          ></span>
          <span>Alumni <i class="ion-ios-arrow-forward"></i></span>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Alumni Cards -->
<section class="ftco-section bg-light">
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-md-8 text-center heading-section">
        <h2 class="mb-4">Proud Alumni of Our Institution</h2>
        <p>
          These individuals once walked our halls and now leave lasting marks
          across Liberia and beyond.
        </p>
      </div>
    </div>
    <div class="row">
      <!-- Alumni Card 1 -->
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="staff">
          <div class="img-wrap d-flex align-items-stretch">
            <div
              class="img"
              style="background-image: url('<%= baseURL %>/images/Testimonial_2.jpg')"
            ></div>
          </div>
          <div class="text pt-3 text-center">
            <h3>Hon. James Kollie</h3>
            <span class="position mb-2">Former Deputy Finance Minister</span>
            <div class="faded">
              <p>
                A brilliant economist and a passionate civil servant who credits
                this school for his strong foundation.
              </p>
              <a href="#" class="btn btn-sm btn-outline-primary">Read Bio</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Alumni Card 2 -->
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="staff">
          <div class="img-wrap d-flex align-items-stretch">
            <div
              class="img"
              style="background-image: url('<%= baseURL %>/images/Testimonial_1.jpg')"
            ></div>
          </div>
          <div class="text pt-3 text-center">
            <h3>Dr. Martha Gaye</h3>
            <span class="position mb-2">Medical Doctor & Advocate</span>
            <div class="faded">
              <p>
                A dedicated health professional transforming rural healthcare in
                Liberia and mentoring young women.
              </p>
              <a href="#" class="btn btn-sm btn-outline-primary">Read Bio</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Alumni Card 3 (Add more as needed) -->
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="staff">
          <div class="img-wrap d-flex align-items-stretch">
            <div
              class="img"
              style="background-image: url('<%= baseURL %>/images/Testimonial_4.jpg')"
            ></div>
          </div>
          <div class="text pt-3 text-center">
            <h3>Mr. Alex Nyan</h3>
            <span class="position mb-2">CEO, NyanTech Group</span>
            <div class="faded">
              <p>
                Tech entrepreneur and innovator building solutions for West
                African industries.
              </p>
              <a href="#" class="btn btn-sm btn-outline-primary">Read Bio</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Add more alumni cards if needed -->
    </div>
  </div>
</section>

