<%- include("./menu/sidebar.ejs") %>
<!-- Sidebar End -->

<!-- Content Start -->
<div class="content">
  <!-- Navbar Start -->
  <%- include("./menu/navbar.ejs") %>

  <!-- View Profile Section Start -->
  <div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">My Profile</h4>
        <a href="/admin/edit-profile" class="btn btn-primary">Update Profile</a>
      </div>

      <div class="row">
        <div class="col-md-4 text-center">
          <img
            src="<%= baseURL %>/admin/img/user.jpg"
            class="img-thumbnail rounded-circle mb-3"
            style="width: 150px; height: 150px"
            alt="Profile Picture"
          />
        </div>

        <div class="col-md-8">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th scope="row" style="width: 30%">Full Name</th>
                <td>John Doe</td>
              </tr>
              <tr>
                <th scope="row">Username</th>
                <td>admin_john</td>
              </tr>
              <tr>
                <th scope="row">Email</th>
                <td>admin@example.com</td>
              </tr>
              <tr>
                <th scope="row">Phone</th>
                <td>+231-77-000-000</td>
              </tr>
              <tr>
                <th scope="row">Joined</th>
                <td>March 15, 2024</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- View Profile Section End -->

  <!-- Footer Start -->
  <%- include("../partials/adminfooter.ejs") %>
</div>
