<%- include("../partials/adminheader.ejs") %>

<!-- Sidebar Start -->
<%- include("./menu/sidebar.ejs") %>
<!-- Sidebar End -->

<!-- Content Start -->
<div class="content">
  <!-- Navbar Start -->
  <%- include("./menu/navbar.ejs") %>

  <!-- View Profile Section Start -->
  <div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">My Profile</h4>
        <a href="/admin/edit-profile" class="btn btn-success">Update Profile</a>
      </div>

      <div class="row">
        <div class="col-md-4 text-center">
          <img
            src="/uploads/profile/<%= admin.profile_picture %>"
            class="img-thumbnail rounded-circle mb-3"
            style="width: 150px; height: 150px"
            alt="Profile Picture"
          />
        </div>

        <div class="col-md-8">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <th scope="row" style="width: 30%">Full Name</th>
                <td><%= admin.name %></td>
              </tr>
              <tr>
                <th scope="row">Username</th>
                <td><%= admin.username %></td>
              </tr>
              <tr>
                <th scope="row">Email</th>
                <td><%= admin.email %></td>
              </tr>
              <tr>
                <th scope="row">Phone</th>
                <td><%= admin.phone %></td>
              </tr>
              <tr>
                <th scope="row">Joined</th>
                <td><%= admin.created_at %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- View Profile Section End -->

  <!-- Footer Start -->
  <%- include("../partials/adminfooter.ejs") %>
</div>
