<!-- Content Start -->
<div class="content">
  <!-- Navbar Start -->
  <%- include("./menu/navbar.ejs") %>
  <!-- Navbar End -->

  <!-- Add Testimony Form Start -->
  <div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
      <div class="col-md-8 bg-light rounded p-4">
        <h3 class="mb-4 text-center">Add New Testimony</h3>
        <form
          action="/admin/add-testimonial"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Enter full name"
              required
            />
          </div>

          <div class="mb-3">
            <label for="position" class="form-label">Position / Role</label>
            <input
              type="text"
              class="form-control"
              id="position"
              name="position"
              placeholder="e.g. Volunteer, Parent, Imam..."
              required
            />
          </div>

          <div class="mb-3">
            <label for="message" class="form-label">Testimony Message</label>
            <textarea
              class="form-control"
              id="message"
              name="message"
              rows="5"
              placeholder="Write the testimony here..."
              required
            ></textarea>
          </div>

          <div class="mb-3">
            <label for="photo" class="form-label">Photo</label>
            <input
              class="form-control"
              type="file"
              id="photo"
              name="photo"
              accept="image/*"
              required
            />
          </div>
          <div class="mb-3">
            <div class="mb-3">
              <label for="status" class="form-label">Status</label>
              <select name="status" class="form-select" required>
                <option value="pending" selected>Pending</option>
                <option value="active">Active</option>
                <option value="rejected">Rejected</option>
              </select>
            </div>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Add Testimony Form End -->

  <!-- Footer Start -->
  <%- include("../partials/adminfooter.ejs") %>

  <!-- Content End -->

