<%- include("../partials/adminheader.ejs") %>
<%- include("./menu/sidebar.ejs") %>

<div class="content">
  <%- include("./menu/navbar.ejs") %>

  <div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
      <h4 class="mb-4 text-center">Add New Announcement</h4>

      <form method="POST" action="/admin/add-announcement" class="needs-validation" novalidate>

        <div class="row g-3">
          <!-- Title -->
          <div class="col-md-8">
            <label class="form-label">Announcement Title</label>
            <input type="text" name="title" class="form-control" placeholder="e.g. Eid al-Adha Prayer – June 16, 2025" required />
          </div>

          <!-- Post Date -->
          <div class="col-md-4">
            <label class="form-label">Post Date</label>
            <input type="date" name="post_date" class="form-control" required />
          </div>

          <!-- Summary -->
          <div class="col-md-12">
            <label class="form-label">Short Summary</label>
            <textarea name="summary" rows="2" class="form-control" placeholder="e.g. Join us for Eid prayers and community reflections…" required></textarea>
          </div>

          <!-- Location -->
          <div class="col-md-6">
            <label class="form-label">Location / Venue</label>
            <input type="text" name="location" class="form-control" placeholder="e.g. Main Mosque Ground, Caldwell Junction" required />
          </div>

          <!-- Date of Event -->
          <div class="col-md-3">
            <label class="form-label">Event Date</label>
            <input type="date" name="event_date" class="form-control" required />
          </div>

          <!-- Time of Event -->
          <div class="col-md-3">
            <label class="form-label">Time</label>
            <input type="text" name="event_time" class="form-control" placeholder="e.g. 7:00 AM" required />
          </div>

          <!-- Body -->
          <div class="col-md-12">
            <label class="form-label">Full Announcement</label>
            <textarea name="content" class="form-control" rows="8" placeholder="Write the full body of the announcement here..." required></textarea>
          </div>

          <!-- Optional CTA -->
          <div class="col-md-6">
            <label class="form-label">Button Text (Optional)</label>
            <input type="text" name="cta_text" class="form-control" placeholder="e.g. Back to Home" />
          </div>
          <div class="col-md-6">
            <label class="form-label">CTA Link</label>
            <input type="url" name="cta_link" class="form-control" placeholder="e.g. / or /contact" />
          </div>

          <!-- Submit -->
          <div class="col-12 text-center mt-4">
            <button type="submit" class="btn btn-success px-5">
              Save Announcement
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <%- include("../partials/adminfooter.ejs") %>

