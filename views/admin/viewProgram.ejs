<%- include("../partials/adminheader.ejs") %> <%- include("./menu/sidebar.ejs")
%>

<div class="content">
  <%- include("./menu/navbar.ejs") %>

  <div class="container-fluid pt-4 px-4">
    <div class="bg-white p-4 rounded shadow-sm">
      <h4 class="text-primary mb-3"><%= program.title %></h4>
      <p class="text-muted"><%= program.summary %></p>

      <hr />
      <div class="row">
        <div class="col-md-6">
          <strong>Description:</strong>
          <p><%= program.description %></p>
          <ul class="list-unstyled mt-3">
            <li><strong>Target:</strong> <%= program.target_audience %></li>
            <li><strong>Location:</strong> <%= program.location %></li>
            <li><strong>Frequency:</strong> <%= program.frequency %></li>
            <li><strong>Duration:</strong> <%= program.duration %></li>
          </ul>
        </div>
        <div class="col-md-6">
          <img
            src="/uploads/programs/<%= program.cover_image %>"
            class="img-fluid rounded shadow mb-3"
            alt="Program Image"
          />
          <% if (program.pdf_path) { %>
          <a
            href="/uploads/programs/<%= program.pdf_path %>"
            class="btn btn-outline-primary btn-sm"
            download
          >
            <i class="fas fa-download"></i> Download Program PDF
          </a>
          <% } %>
        </div>
      </div>

      <% if (program.video_url) { %>
      <div class="mt-4">
        <h5 class="text-secondary">Video</h5>
        <div class="ratio ratio-16x9">
          <iframe
            src="<%= program.video_url %>"
            frameborder="0"
            allowfullscreen
          ></iframe>
        </div>
      </div>
      <% } %> <% if (program.gallery && program.gallery.length > 0) { %>
      <div class="mt-4">
        <h5 class="text-secondary">Gallery</h5>
        <div class="row">
          <% program.gallery.forEach(image => { %>
          <div class="col-md-3 mb-3">
            <img
              src="/uploads/programs/gallery/<%= image %>"
              class="img-fluid rounded shadow"
            />
          </div>
          <% }) %>
        </div>
      </div>
      <% } %> <% if (program.testimonial) { %>
      <div class="mt-4 bg-light p-3 rounded">
        <blockquote class="blockquote mb-0">
          <p><%= program.testimonial %></p>
          <footer class="blockquote-footer">
            <%= program.testimonial_by %>
          </footer>
        </blockquote>
      </div>
      <% } %>

      <div class="text-end mt-4">
        <a href="/admin/edit-program/<%= program.id %>" class="btn btn-warning">
          <i class="fas fa-edit"></i> Edit
        </a>
      </div>
    </div>
  </div>

  <%- include("../partials/adminfooter.ejs") %>
  

