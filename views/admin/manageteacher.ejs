<%- include("../partials/adminheader.ejs") %>

<!-- Sidebar Start -->
<%- include("./menu/sidebar.ejs") %>
<!-- Sidebar End -->

<!-- Content Start -->
<div class="content">
  <!-- Navbar Start -->

  <%- include("./menu/navbar.ejs") %>
  <!-- Manage Teacher Start -->

  <section
    class="hero-wrap hero-wrap-2 mt-3"
    style="background-image: url('<%= baseURL %>/images/bg_2.jpg')"
  >
    <div class="overlay"></div>
    <div class="container">
      <div
        class="row no-gutters slider-text align-items-center justify-content-center"
      >
        <div class="col-md-9 ftco-animate text-center">
          <h1 class="mb-2 bread">Manage Teachers</h1>
          <p class="breadcrumbs">
            <span class="mr-2"
              ><a href="/admin/dashboard"
                >Dashboard <i class="ion-ios-arrow-forward"></i></a
            ></span> / 
            <span>Teachers</span>
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="ftco-section">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">All Registered Teachers</h4>
        <a href="/admin/add-teacher" class="btn btn-primary">Add New Teacher</a>
      </div>

      <div class="table-responsive shadow-sm">
        <table class="table table-striped align-middle table-hover">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Photo</th>
              <th>Name</th>
              <th>Specialization</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Subjects</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Dummy data row -->
            <tr>
              <td>1</td>
              <td>
                <img
                  src="<%= baseURL %>/images/teacher-1.jpg"
                  class="rounded-circle"
                  style="width: 40px; height: 40px"
                  alt="Teacher"
                />
              </td>
              <td>Bianca Wilson</td>
              <td>Mathematics Teacher</td>
              <td>bianca@school.edu</td>
              <td>+231 88 000 0000</td>
              <td>Algebra, Calculus</td>
              <td>
                <a
                  href="/admin/view-teacher"
                  class="btn btn-sm btn-info text-white"
                  >View</a
                >
                <a href="/admin/edit-teacher" class="btn btn-sm btn-warning"
                  >Edit</a
                >
                <form
                  action="/admin/delete-teacher/1"
                  method="POST"
                  class="d-inline"
                  onsubmit="return confirm('Are you sure you want to delete this teacher?');"
                >
                  <button type="submit" class="btn btn-sm btn-danger">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <!-- Add more rows dynamically using EJS loop when backend is ready -->
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Manager Teacher End -->

  <!-- Footer Start -->
  <%- include("../partials/adminfooter.ejs") %>
</div>
