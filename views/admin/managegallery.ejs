            </tr>
          </thead>
          <tbody>
            <!-- Sample static rows (replace with loop when backend is ready) -->
            <tr class="text-center align-middle">
              <td>1</td>
              <td>Sample Image</td>
              <td>
                <img
                  src="<%= baseURL %>/uploads/gallery/sample.jpg"
                  alt="Sample"
                  style="width: 100px; height: auto"
                />
              </td>
              <td>
                <a href="/admin/add-gallery" class="btn btn-sm btn-warning me-2"
                  >Edit</a
                >
                <a href="/admin/gallery/delete/1" class="btn btn-sm btn-danger"
                  >Delete</a
                >
              </td>
            </tr>
            <!-- End sample -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- Manage Gallery End -->

