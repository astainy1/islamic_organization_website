<head>
  <!-- Basic Meta -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Title & Description -->
  <title><%= title || 'Higher Lajinah for Islamic Affairs - Liberia' %></title>
  <meta
    name="description"
    content="<%= description || 'Faith. Unity. Community Empowerment. Learn more about the Higher Lajinahâ€™s Islamic programs and social initiatives in Liberia.' %>"
  />
  <meta
    name="keywords"
    content="Islamic Organization, Liberia, Mosque, Zakat, Dawah, Qur'an, Islamic Education, Muslim Community, Charity in Liberia"
  />
  <meta name="author" content="Higher Lajinah for Islamic Affairs" />

  <!-- Canonical Link -->
  <link
    rel="canonical"
    href="https://www.lajinahliberia.org<%= url || '/' %>"
  />

  <!-- Open Graph (Facebook, WhatsApp, LinkedIn) -->
  <meta
    property="og:title"
    content="<%= title || 'Higher Lajinah for Islamic Affairs - Liberia' %>"
  />
  <meta
    property="og:description"
    content="<%= description || 'Faith. Unity. Community Empowerment.' %>"
  />
  <meta property="og:image" content="<%= baseURL %>/images/logo.png" />
  <meta
    property="og:url"
    content="https://www.lajinahliberia.org<%= url || '/' %>"
  />
  <meta property="og:type" content="website" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta
    name="twitter:title"
    content="<%= title || 'Higher Lajinah for Islamic Affairs' %>"
  />
  <meta
    name="twitter:description"
    content="<%= description || 'Serving the Muslim community in Liberia with faith, leadership, and education.' %>"
  />
  <meta name="twitter:image" content="<%= baseURL %>/images/logo.png" />

  <!-- Schema.org (Optional for Organization) -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Higher Lajinah for Islamic Affairs",
      "url": "https://www.lajinahliberia.org",
      "logo": "https://www.lajinahliberia.org/images/logo.png",
      "sameAs": [
        "https://facebook.com/YourPage",
        "https://twitter.com/YourHandle"
      ],
      "description": "Serving the Muslim community of Liberia through education, charity, and faith-based programs."
    }
  </script>

  <!-- Favicons & Manifest -->
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="manifest" href="/site.webmanifest" />

  <!-- Fonts and Icons -->
  <link
    href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800,900&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/@flaticon/flaticon-uicons@3.3.1/css/all/all.min.css"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />

  <!-- Stylesheets -->
  <!-- Lightbox CSS -->
