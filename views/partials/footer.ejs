  <!-- Mega Menu Starts -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const container = document.getElementById("megaMenuContainer");
    const menu = document.getElementById("megaMenu");
    const menuBtn = document.getElementById("megaMenuTrigger");


    let timeout;

    // Show container when menuBtn is clicked.
    menuBtn.addEventListener("click", () => {
      container.classList.add("show");
      menu.classList.add("show");
    })

    // Show when mouse enters the container (nav item)
    container.addEventListener("mouseenter", () => {
      clearTimeout(timeout);
      container.classList.add("show");
      menu.classList.add("show");
    });

    // Keep open when hovering over the dropdown
    menu.addEventListener("mouseenter", () => {
      clearTimeout(timeout);
      container.classList.add("show");
      menu.classList.add("show");
    });

    // Hide when mouse leaves both container and menu
    container.addEventListener("mouseleave", () => {
      timeout = setTimeout(() => {
        container.classList.remove("show");
        menu.classList.remove("show");
      }, 300);
    });

    menu.addEventListener("mouseleave", () => {
      timeout = setTimeout(() => {
        container.classList.remove("show");
        menu.classList.remove("show");
      }, 300);
    });

  });
</script>
<!-- Mega Menu Ends -->

